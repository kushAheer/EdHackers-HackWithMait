@model Users
@{
    ViewData["Titles"] = "Register Page";

    var SelectList = ViewData["UserTypes"] as SelectList;

    var ErrorMsg = TempData["ErrorMsg"];
}

<div class="container">

    <form class="row mb-5" asp-action="Register">

        @{
            if(ErrorMsg != "")
            {
                <div class="alert alert-danger">@ErrorMsg</div>
            }
        }

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="FullName" class="control-label">Enter Full Name</label>
            <input type="text" asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="control-label">Enter Email</label>
            <input type="email" asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="control-label">Enter Password</label>
            <input type="password" asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div>

            <div class="form-check">
                <label class="form-check-label" asp-for="UserType" for="flexRadioDefault1">
                    User type
                </label>
                <select asp-for="UserType" asp-items="SelectList">
                    
                </select>
                @* <input class="form-check-input" asp-for="UserType" type="radio" name="flexRadioDefault" value="option-1" id="flexRadioDefault1"> *@
                
            </div>
            @* <div class="form-check">
                <input class="form-check-input" type="radio" name="flexRadioDefault" asp-for="UserType" value="option-2" id="flexRadioDefault2" checked>
                <label class="form-check-label" for="flexRadioDefault2" asp-for="UserType">
                    Teacher
                </label>
            </div> *@
        </div>
        <button type="submit" class="btn btn-outline-primary" asp-action="Register">REGISTER</button>
    </form>
</div>
